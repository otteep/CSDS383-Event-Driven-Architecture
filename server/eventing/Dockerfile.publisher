FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY common ./common
COPY publisher ./publisher
COPY scripts/topology.py ./scripts/topology.py

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

CMD ["sh", "-c", "python scripts/topology.py && uvicorn publisher.main:app --host 0.0.0.0 --port 8000"]